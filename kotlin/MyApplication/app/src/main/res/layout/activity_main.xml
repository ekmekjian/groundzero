<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Add Task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addTask"
            app:layout_constraintStart_toEndOf="@+id/enterTask" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="295dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text="Enter Task"
            android:ems="10"
            android:id="@+id/enterTask"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>